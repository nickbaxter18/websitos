# Always save exact versions in package.json
save-exact=true

# Enforce engine compatibility (useful if Node version mismatches)
engine-strict=true

# Use lockfile consistently (npm ci will fail if out of sync)
package-lock=true

# Prevent creating a package-lock.json automatically when not needed
lockfile-version=3

# Avoid legacy peer dependency warnings (optional for older libs)
legacy-peer-deps=false

# Ensure consistent line endings in installed packages
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
