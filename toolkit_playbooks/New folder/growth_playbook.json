    "engagement": [
      {
        "id": "exit_intent",
        "headline": "👋 Wait! Don’t leave empty-handed.",
        "body": "Grab our free {{FREEBIE}} before you go.",
        "placement": "landing_page.exit_popup"
      },
      {
        "id": "quiz",
        "headline": "📊 Find your perfect AI product",
        "body": "Take our 2-minute quiz and see your match.",
        "placement": "landing_page.hero, lead_capture_email.day_1"
      }
