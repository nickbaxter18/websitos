        "placement": "landing_page.hero, email.day_1"
      },
      {
        "id": "today_only",
        "headline": "🚀 Act today and unlock {{BONUS_REWARD}}",
        "placement": "thank_you.upsells, retention_email.day_7"
      }
    ],
    "social_proof": [
      {
        "id": "testimonial_quote",
        "format": "\"{{CUSTOMER_NAME}} saved {{HOURS_SAVED}} hours in their first week!\"",
