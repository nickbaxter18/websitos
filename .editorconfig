# top-most EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript & JavaScript
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# JSON, YAML, Markdown
[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# Markdown (donâ€™t trim trailing spaces, needed for line breaks)
[*.md]
trim_trailing_whitespace = false
