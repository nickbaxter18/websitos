{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "v2/*": ["v2/*"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom", "@playwright/test"]
  },
  "include": ["src", "tests", "v2", "WEBSITEOS"],
  "exclude": ["node_modules", "dist"]
}