{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client"],
    "typeRoots": ["./node_modules/@types", "./node_modules/@playwright"]
  },
  "include": ["src", "tests", "scripts"],
  "exclude": ["node_modules", "dist"]
}