{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "v2/*": ["v2/*"]
    }
  },
  "include": ["src", "v2", "tests", "src/vite-env.d.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
