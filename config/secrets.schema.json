{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Secrets Schema",
  "type": "object",
  "properties": {
    "GITHUB_TOKEN": {
      "type": "string",
      "description": "GitHub-provided token for workflow automation"
    },
    "CODECOV_TOKEN": {
      "type": "string",
      "description": "Token for uploading coverage reports to Codecov"
    },
    "RENDER_API_KEY": {
      "type": "string",
      "description": "API key for deploying to Render"
    }
  },
  "required": ["GITHUB_TOKEN", "CODECOV_TOKEN"],
  "additionalProperties": true
}