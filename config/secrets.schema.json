{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Secrets Schema",
  "description": "Canonical list of secrets required by this repository across environments (GitHub, Render, .env).",
  "type": "object",
  "properties": {
    "APP_APT_KEY": {
      "type": "string",
      "description": "Application private key for securing API requests."
    },
    "QDRANT_URL": {
      "type": "string",
      "description": "Qdrant cluster endpoint URL (e.g., https://<cluster>.qdrant.io)."
    },
    "QDRANT_API_KEY": {
      "type": "string",
      "description": "Qdrant API key (JWT token)."
    },
    "OPEN_AI_API_KEY": {
      "type": "string",
      "description": "OpenAI API key."
    }
  },
  "required": [
    "APP_APT_KEY",
    "QDRANT_URL",
    "QDRANT_API_KEY",
    "OPEN_AI_API_KEY"
  ],
  "additionalProperties": true
}