{
  "name": "website-os-v2",
  "version": "1.0.2",
  "private": true,
  "description": "WebsiteOS v2 – Unified frontend, backend, and editor stack",
  "main": "server.js",
  "type": "module",
  "imports": {
    "@/*": "./src/*",
    "#/*": "./src/*",
    "v2/*": "./v2/*"
  },
  "scripts": {
    "preinstall": "node -e \"if (!/pnpm/.test(process.env.npm_execpath || '')) { console.error('❌ Use pnpm, not npm'); process.exit(1); }\"",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --clearCache && cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:ci": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --json --outputFile=jest-report.json",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "lint": "eslint src v2 ops",
    "lint:fix": "eslint src v2 ops --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:all": "black . && prettier --write . && eslint . --fix",
    "validate": "ts-node v2/core/schema-validator.ts",
    "validate-env": "node --loader ts-node/esm --experimental-specifier-resolution=node src/validateEnv.ts",
    "verify-assets": "node scripts/verifyAssets.js",
    "prepare": "husky",
    "start": "node server.js",
    "backend": "node server.js",
    "frontend": "vite",
    "reload": "ts-node reload-update.ts",
    "reload:watch": "nodemon --watch src --ext ts,tsx,js,jsx --exec \"pnpm run reload\"",
    "dev:all": "concurrently \"pnpm run backend\" \"pnpm run frontend\" \"pnpm run reload:watch\"",
    "opscycle": "ts-node -P tsconfig.ops.json scripts/opsCycle.ts",
    "secscan": "ts-node -T -P tsconfig.ops.json scripts/scan-secrets.ts"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.0",
    "body-parser": "^1.20.3",
    "cors": "2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "2.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "7.9.1",
    "recharts": "3.2.0",
    "zod": "4.1.8"
  },
  "devDependencies": {
    "@babel/core": "^7.25.9",
    "@babel/preset-env": "^7.25.9",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.25.9",
    "@eslint/js": "9.35.0",
    "@playwright/test": "1.55.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "16.3.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.19.14",
    "@types/react": "18.3.24",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "babel-plugin-istanbul": "^6.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "9.35.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "husky": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-github-actions-reporter": "^1.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "playwright": "^1.45.0",
    "postcss": "^8.4.32",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tough-cookie": "^4.1.3",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "typescript-eslint": "8.43.0",
    "vite": "7.1.5",
    "vite-plugin-istanbul": "5.0.0",
    "vite-tsconfig-paths": "5.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,html,md}": "prettier --write",
    "*.{yml,yaml}": "prettier --write --parser yaml",
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.py": "black"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickbaxter18/websitos.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nickbaxter18/websitos/issues"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "overrides": {
    "lodash.template": "^4.5.0",
    "lodash": "^4.17.21"
  }
}
