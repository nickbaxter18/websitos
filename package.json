{
  "name": "website-os-v2",
  "version": "1.0.2",
  "private": true,
  "description": "WebsiteOS v2 â€“ Unified frontend, backend, and editor stack",
  "main": "server.js",
  "type": "module",
  "imports": {
    "@/*": "./src/*",
    "#/*": "./src/*",
    "v2/*": "./v2/*"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:ci": "jest --passWithNoTests --coverage --coverageReporters=json-summary --coverageReporters=lcov --json --outputFile=jest-report.json",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "lint": "eslint src v2 ops",
    "lint:fix": "eslint src v2 ops --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "ts-node v2/core/schema-validator.ts",
    "validate-env": "ts-node --esm src/validateEnv.ts",
    "verify-assets": "node scripts/verifyAssets.js",
    "prepare": "husky",
    "start": "node server.js",
    "backend": "node server.js",
    "frontend": "vite",
    "reload": "ts-node reload-update.ts",
    "reload:watch": "nodemon --watch src --ext ts,tsx,js,jsx --exec \"npm run reload\"",
    "dev:all": "concurrently \"npm run backend\" \"npm run frontend\" \"npm run reload:watch\"",
    "opscycle": "ts-node -P tsconfig.ops.json scripts/opsCycle.ts",
    "secscan": "ts-node -T -P tsconfig.ops.json scripts/scan-secrets.ts"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.0",
    "body-parser": "^1.20.3",
    "cors": "2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "2.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "7.9.1",
    "recharts": "3.2.0",
    "zod": "4.1.8"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.25.9",
    "@eslint/js": "9.35.0",
    "@playwright/test": "1.55.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@types/jest": "30.0.0",
    "@types/node": "20.19.14",
    "@types/react": "18.3.24",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/parser": "8.43.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "9.35.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "husky": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "30.1.2",
    "jest-github-actions-reporter": "^1.0.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.45.0",
    "postcss": "^8.4.32",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "typescript-eslint": "8.43.0",
    "vite": "7.1.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "reporters": [
      "default",
      "jest-github-actions-reporter"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/",
      "<rootDir>/WEBSITEOS/tests/e2e/"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^v2/(.*)$": "<rootDir>/v2/$1",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,html,md}": "prettier --write",
    "*.{yml,yaml}": "prettier --write --parser yaml",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickbaxter18/websitos.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nickbaxter18/websitos/issues"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "overrides": {
    "lodash.template": "^4.5.0",
    "lodash": "^4.17.21"
  }
}
