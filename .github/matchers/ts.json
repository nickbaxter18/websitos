{
  "problemMatcher": [
    {
      "owner": "tsc",
      "pattern": [
        {
          "regexp": "^(?<file>.*?):(?<line>\\d+):(?<col>\\d+) - error (?<code>TS[0-9]+): (?<msg>.+)$",
          "file": "file",
          "line": "line",
          "column": "col",
          "message": "TS Error (${code}): ${msg}",
          "annotationLevel": "failure"
        },
        {
          "regexp": "^(?<file>.*)\\((?<line>\\d+),(?<col>\\d+)\\): error (?<code>TS[0-9]+): (?<msg>.+)$",
          "file": "file",
          "line": "line",
          "column": "col",
          "message": "TS Error (${code}): ${msg}",
          "annotationLevel": "failure"
        }
      ]
    }
  ]
}