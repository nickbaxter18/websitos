{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["ops/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist", "v2/core/modules/special"]
}
