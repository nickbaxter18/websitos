#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "✅ Husky pre-push running..."

# Run TypeScript type-checks (fail if errors)
pnpm type-check
if [ $? -ne 0 ]; then
  echo "❌ Type-check failed"
  exit 1
fi

# Run Jest unit tests only (fail if errors)
pnpm test:unit
if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed"
  exit 1
fi

echo "✅ All pre-push checks passed"
exit 0